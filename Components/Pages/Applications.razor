@page "/Applications"
@rendermode InteractiveServer
@inject Konveyer.Data.KonveyerDbContext DbContext
@using Konveyer.Models
@using Microsoft.EntityFrameworkCore
@using Konveyer.Components.Layout
@inject NavigationManager Navigator

<NavMenu/>

    <div class="main">
        <h1 style="margin-bottom: 25px;color: white;">Kredit maxsulotini tanlang</h1>
        <div class="form">
        @foreach (var app in Apps){
            <button class="application" @onclick="()=>CreateCredit(app)">
                <h1>@app.Name</h1>
                <p>Maks. miqdor: @app.LimitAmount</p>
                <p>Foiz stavkasi: @app.Rate%</p>
                <p>Maks. muddat: @app.Fine oy</p>
            </button>
        }
        </div>
    </div>


@code {
    List<Application> Apps = new List<Application>();
    private Credit newCredit = new Credit();

    protected override async Task OnInitializedAsync(){
        Apps = await DbContext.Applications.ToListAsync();
    }

    public async Task CreateCredit(Application app){
        newCredit.ApplicationId = app.Id;
        await DbContext.Credits.AddAsync(newCredit);
        await DbContext.SaveChangesAsync();
        Navigator.NavigateTo($"Konveyer/{newCredit.Id}");
    }
}




